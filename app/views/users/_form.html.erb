<%= render 'shared/error', obj: @user %>
<%= form_for(@user , :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
	<%= f.label :username ,class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.text_field :username, class: "form-control", placeholder: "user name", autofocus: true  %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password ,class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.password_field :password, class: "form-control", placeholder: "place input pass word", autofocus: true  %>
	</div>
</div>
<div class="form-group">
	<%= f.label :email,class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :email, class: "form-control", placeholder: "Title of article", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<%= f.label :address ,class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.text_field :address , class: "form-control", placeholder: "Title of article", autofocus: true%>
	</div>
</div>
 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<%= f.submit(@user.new_record? ? "Sign up": "Update account", class: "btn btn-default")%>
    </div>
  </div>
  <div class="col-xs-4 col-xs-offset-4">

[ <%= link_to "Cancel request and return to users listing", users_path %> ]

</div>
<% end %>