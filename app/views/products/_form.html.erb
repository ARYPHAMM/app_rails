<%= form_for(@product , :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
	<%= f.label :name ,class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.text_field :name, class: "form-control", placeholder: "Title of article", autofocus: true  %>
	</div>
</div>
<div class="form-group">
	<%= f.label :decsription,class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :decsription, class: "form-control", placeholder: "Title of article", autofocus: true %>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-sm-offset-2 col-sm-8">
			<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
			<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
			<% end %>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit class: "btn btn-default" %>
	</div>
</div>
<div class="col-xs-4 col-xs-offset-4">
	[ <%= link_to "Cancel request and return to products listing", products_path %> ]
</div>
<% end %>