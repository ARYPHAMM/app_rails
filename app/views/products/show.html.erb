<h1>Info</h1>
<h2 align="center"> <%= @product.name %></h2>
<h2 align="center">for acccount : <%= @product.user.username %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center email"><strong>Description</strong></h4>
	<hr>
	<%= simple_format(@product.decsription) %>
	create for : <li><%= link_to gravatar_for(@product.user), users_path(@product.user) %>
		<%= link_to @product.user.username, users_path(@product.user) %>
	</li>
	<% if @product.categories.any? %>
	<p>Categories: <%= render @product.categories %></p>
	<% end %>
	<% if logged_in? && (current_user == @product.user || current_user.admin?) %>
	<div class="user-actions">
		<%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this product", products_path(@product), method: :delete,
		data: { confirm: "Are you sure you want to delete the user?"},
		class: "btn btn-xs btn-danger" %>
		<%= link_to "View all product", products_path, class: "btn btn-xs btn-success" %>
	</div>
	<% end %>
</div>