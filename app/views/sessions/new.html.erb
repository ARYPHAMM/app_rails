<%= form_for(:session , :html => {class: "form-horizontal", role: "form"},url: login_path) do |f| %>
<div class="form-group">
	<%= f.label :username ,class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.text_field :username, class: "form-control", placeholder: "user name", autofocus: true  %>
	</div>
</div>
<div class="form-group">
	<%= f.label :password ,class: "col-sm-2 control-label"%>
	<div class="col-sm-10">
		<%= f.password_field :password, class: "form-control", placeholder: "place input pass word", autofocus: true , autocomplete: "off"  %>
	</div>
</div>
 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<%= f.submit "Login" , class: "btn btn-default" %>
    </div>
  </div>
<% end %>